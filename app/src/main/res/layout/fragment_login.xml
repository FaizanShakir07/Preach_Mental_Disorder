<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/llRegister"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/login_bg"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/splash_logo"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_75sdp"/>
                    <TextView
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:text="Create new account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:layout_marginTop="@dimen/_60sdp"
                        android:hint="Email"
                        android:background="@drawable/bg_btn_white"
                        style="@style/editTextStyle"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        app:passwordToggleEnabled="true"
                        app:hintAnimationEnabled="false"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:hint="Password"
                            android:background="@drawable/bg_btn_white"
                            style="@style/editTextStyle"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        app:passwordToggleEnabled="true"
                        android:layout_marginBottom="@dimen/_40sdp"
                        app:hintAnimationEnabled="false"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:hint="Confirm Password"
                            android:background="@drawable/bg_btn_white"
                            style="@style/editTextStyle"/>
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:gravity="center"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:background="@color/colorGray"
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:layout_height="1dp"/>
                    <TextView
                        android:layout_weight=".1"
                        android:textSize="@dimen/_14sdp"
                        android:textAlignment="center"
                        android:textColor="@color/colorGray"
                        android:text="OR"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <View
                        android:background="@color/colorGray"
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:layout_height="1dp"/>
                </LinearLayout>
                <TextView
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textAlignment="center"
                    android:textColor="@color/colorGray"
                    android:text="Continue with"
                    android:layout_below="@id/llLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@drawable/bg_white_rounded"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/ic_google"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/bg_white_rounded"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/ic_facebook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
           <LinearLayout
               android:id="@+id/llLogin"
               android:visibility="visible"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:id="@+id/llTopLayout"
                   android:background="@drawable/login_bg"
                   android:layout_width="match_parent"
                   android:orientation="vertical"
                   android:layout_height="match_parent">
                   <TextView
                       android:layout_marginTop="@dimen/_25sdp"
                       android:textSize="@dimen/_26sdp"
                       android:textStyle="bold"
                       android:textAlignment="center"
                       android:textColor="@color/colorWhite"
                       android:text="Let's Get Started!"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>
                   <TextView
                       android:layout_marginTop="@dimen/_30sdp"
                       android:textSize="@dimen/_12sdp"
                       android:textAlignment="center"
                       android:textColor="@color/colorWhite"
                       android:text="Sign In to continue"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>
                   <EditText
                       android:hint="Email"
                       android:layout_marginTop="@dimen/_70sdp"
                       android:background="@drawable/bg_btn_white"
                       style="@style/editTextStyle"/>
                   <com.google.android.material.textfield.TextInputLayout
                       android:layout_width="match_parent"
                       app:passwordToggleEnabled="true"
                       app:hintAnimationEnabled="false"
                       android:layout_marginTop="@dimen/_10sdp"
                       android:layout_height="wrap_content">
                       <com.google.android.material.textfield.TextInputEditText
                           android:hint="Password"
                           android:background="@drawable/bg_btn_white"
                           style="@style/editTextStyle"/>
                   </com.google.android.material.textfield.TextInputLayout>


                   <LinearLayout
                       android:weightSum="1"
                       android:orientation="horizontal"
                       android:layout_width="match_parent"
                       android:layout_marginBottom="@dimen/_40sdp"
                       android:layout_marginTop="@dimen/_10sdp"
                       android:layout_marginStart="@dimen/_20sdp"
                       android:layout_marginEnd="@dimen/_20sdp"
                       android:layout_height="wrap_content">

                       <CheckBox
                           android:layout_width="0dp"
                           android:layout_weight=".5"
                           android:text="Stay Signed in"
                           android:textColor="@color/colorWhite"
                           android:layout_marginStart="@dimen/_10sdp"
                           android:buttonTint="@color/colorWhite"
                           android:layout_height="wrap_content"/>
                       <TextView
                           android:layout_weight=".5"
                           android:textSize="@dimen/_12sdp"
                           android:textAlignment="viewEnd"
                           android:layout_marginEnd="@dimen/_10sdp"
                           android:textColor="@color/colorWhite"
                           android:text="Forgot password?"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"/>
                   </LinearLayout>
               </LinearLayout>

               <LinearLayout
                   android:id="@+id/llLine"
                   android:weightSum="1"
                   android:orientation="horizontal"
                   android:layout_marginTop="@dimen/_40sdp"
                   android:layout_below="@id/btnLogin"
                   android:gravity="center"
                   android:paddingStart="@dimen/_10sdp"
                   android:paddingEnd="@dimen/_10sdp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <View
                       android:background="@color/colorGray"
                       android:layout_width="0dp"
                       android:layout_weight=".4"
                       android:layout_height="1dp"/>
                   <TextView
                       android:layout_weight=".1"
                       android:textSize="@dimen/_14sdp"
                       android:textAlignment="center"
                       android:textColor="@color/colorGray"
                       android:text="OR"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"/>
                   <View
                       android:background="@color/colorGray"
                       android:layout_width="0dp"
                       android:layout_weight=".4"
                       android:layout_height="1dp"/>
               </LinearLayout>
               <TextView
                   android:id="@+id/tvContinueWith"
                   android:textSize="@dimen/_14sdp"
                   android:layout_marginTop="@dimen/_5sdp"
                   android:textAlignment="center"
                   android:textColor="@color/colorGray"
                   android:text="Continue with"
                   android:layout_below="@id/llLine"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>

               <LinearLayout
                   android:layout_marginTop="@dimen/_7sdp"
                   android:layout_below="@id/tvContinueWith"
                   android:orientation="horizontal"
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:background="@drawable/bg_white_rounded"
                       android:layout_width="wrap_content"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:src="@drawable/ic_google"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>
                   </LinearLayout>
                   <LinearLayout
                       android:background="@drawable/bg_white_rounded"
                       android:layout_width="wrap_content"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:layout_gravity="center"
                           android:src="@drawable/ic_facebook"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>
                   </LinearLayout>
               </LinearLayout>
           </LinearLayout>
            <Button
                android:id="@+id/btnLogin"
                android:layout_marginTop="@dimen/_340sdp"
                android:text="Log In"
                android:textColor="@color/colorWhite"
                android:background="@drawable/bg_btn_blue"
                style="@style/buttonStyle"/>
            <Button
                android:visibility="gone"
                android:id="@+id/btnRegister"
                android:layout_marginTop="@dimen/_380sdp"
                android:text="Register"
                android:textColor="@color/colorWhite"
                android:background="@drawable/bg_btn_blue"
                style="@style/buttonStyle"/>
            <LinearLayout
                android:layout_marginTop="@dimen/_110sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:tabIndicator="@color/colorGray"
                    app:tabIndicatorColor="@color/colorWhite"
                    app:tabIndicatorHeight="2dp"
                    android:fitsSystemWindows="true"
                    app:tabGravity="fill"
                    app:tabMode="fixed"
                    app:tabSelectedTextColor="@color/colorWhite"
                    app:tabTextAppearance="@style/TabLayoutStyle"
                    app:tabTextColor="@color/colorWhite">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Login" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Register" />
                </com.google.android.material.tabs.TabLayout>
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

</LinearLayout>