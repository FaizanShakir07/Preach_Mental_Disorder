<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/login_bg"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_100sdp">
        <ImageView
            android:src="@drawable/ic_home_logo"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"/>


    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_alignParentLeft="true"
            android:textAllCaps="false"
            android:layout_marginStart="@dimen/_25sdp"
            android:background="@drawable/btn_white_background"
            android:layout_width="@dimen/_115sdp"
            android:text="Settings"
            android:textColor="@color/colorBlueBtn"
            android:layout_height="@dimen/_40sdp"/>
        <Button
            android:text="Log Out"
            android:textAllCaps="false"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorBlueBtn"
            android:layout_marginEnd="@dimen/_25sdp"
            android:background="@drawable/btn_white_background"
            android:layout_width="@dimen/_115sdp"
            android:layout_height="@dimen/_40sdp"/>
    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_marginStart="@dimen/_30sdp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="@dimen/_115sdp"
            android:layout_height="@dimen/_95sdp">
            <ImageView
                android:src="@drawable/ic_ayat_by_feelings"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_60sdp"/>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_alignParentRight="true"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="@dimen/_115sdp"
            android:layout_height="@dimen/_95sdp">
            <ImageView
                android:src="@drawable/ic_ayat_by_feelings"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_60sdp"/>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_marginStart="@dimen/_30sdp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="@dimen/_115sdp"
            android:layout_height="@dimen/_95sdp">
            <ImageView
                android:src="@drawable/ic_islamic_leaders"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_70sdp"/>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_alignParentRight="true"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="@dimen/_115sdp"
            android:layout_height="@dimen/_95sdp">
            <ImageView
                android:src="@drawable/ic_computational_form"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_60sdp"/>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_marginStart="@dimen/_30sdp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="@dimen/_115sdp"
            android:layout_height="@dimen/_95sdp">
            <ImageView
                android:src="@drawable/ic_invite_freind"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_70sdp"/>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_alignParentRight="true"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="@dimen/_115sdp"
            android:layout_height="@dimen/_95sdp">
            <ImageView
                android:src="@drawable/ic_become_a_person"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_70sdp"/>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</LinearLayout>