<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/login_bg"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivBack"
                android:src="@drawable/ic_back"
                android:padding="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:padding="@dimen/_15sdp"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:text="Today"
            android:textSize="@dimen/_24sdp"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_25sdp"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:weightSum="1"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textAllCaps="false"
                android:layout_weight=".3"
                android:background="@drawable/btn_white_background"
                android:layout_width="0dp"
                android:text="Goals"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:textColor="@color/colorBlueBtn"
                android:layout_height="@dimen/_25sdp"/>
            <Button
                android:textAllCaps="false"
                android:layout_weight=".4"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/btn_white_background"
                android:layout_width="0dp"
                android:text="Schedules"
                android:textColor="@color/colorBlueBtn"
                android:layout_height="@dimen/_25sdp"/>
            <Button
                android:textAllCaps="false"
                android:layout_weight=".3"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:background="@drawable/btn_white_background"
                android:layout_width="0dp"
                android:text="Insight"
                android:textColor="@color/colorBlueBtn"
                android:layout_height="@dimen/_25sdp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/white_rounded_background"
            android:layout_width="@dimen/_270sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_height="wrap_content">
            <TextView
                android:text="You' doing great!"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

           <RelativeLayout
               android:layout_marginTop="@dimen/_25sdp"
               android:backgroundTint="#656212"
               android:layout_width="@dimen/_150sdp"
               android:layout_height="@dimen/_150sdp"
               android:layout_gravity="center"
               android:background="@drawable/ic_circle">
               <LinearLayout
                   android:backgroundTint="#EC1891"
                   android:layout_margin="@dimen/_10sdp"
                   android:layout_width="wrap_content"
                   android:background="@drawable/ic_circle"
                   android:layout_height="wrap_content">
                  <LinearLayout

                      android:background="@drawable/ic_circle"
                      android:layout_margin="@dimen/_10sdp"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent">

                  </LinearLayout>
               </LinearLayout>

           </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight=".25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:tint="#656212"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_checkbox_color_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginStart="@dimen/_8sdp"
                        android:textAlignment="viewStart"
                        android:text="Prayers "
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:layout_weight=".4"
                    android:text="3 prayers out 5"
                    android:textAlignment="center"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textAlignment="viewEnd"
                    android:layout_weight=".35"
                    android:text="Complete now"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight=".25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:tint="#EC1891"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_checkbox_color_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginStart="@dimen/_8sdp"
                        android:textAlignment="viewStart"
                        android:text="Quran"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:layout_weight=".4"
                    android:text="3 ayats out 12"
                    android:textAlignment="center"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textAlignment="viewEnd"
                    android:layout_weight=".35"
                    android:text="Complete now"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight=".25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_checkbox_color_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginStart="@dimen/_8sdp"
                        android:textAlignment="viewStart"
                        android:text="Duas "
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:layout_weight=".4"
                    android:text="3 duas out 7"
                    android:textAlignment="center"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textAlignment="viewEnd"
                    android:layout_weight=".35"
                    android:text="Complete now"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="@dimen/_20sdp"
                android:text="View all progress"
                android:layout_marginBottom="@dimen/_15sdp"
                android:textAlignment="viewEnd"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>

</ScrollView>
</LinearLayout>